<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnChoki"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/my_choki" />

    <ImageButton
        android:id="@+id/btnGu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btnChoki"
        app:layout_constraintEnd_toStartOf="@+id/btnChoki"
        app:layout_constraintTop_toTopOf="@+id/btnChoki"
        app:srcCompat="@drawable/my_gu" />

    <ImageButton
        android:id="@+id/btnPa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btnChoki"
        app:layout_constraintStart_toEndOf="@+id/btnChoki"
        app:layout_constraintTop_toTopOf="@+id/btnChoki"
        app:srcCompat="@drawable/my_pa" />

    <TextView
        android:id="@+id/lblJanken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_ready"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/btnChoki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>